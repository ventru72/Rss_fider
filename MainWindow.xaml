<Window x:Class="RSS_Fider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSS_Fider"
        mc:Ignorable="d"
        Title="MainWindow" Height="1920" Width="1080"
         SizeToContent ="Height" MinHeight="400" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="233*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition   Width="65*"/>

            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions >
        <ListBox x:Name="listRss"
                 Grid.Row="1"
                 Grid.Column ="0"
                 d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,10,0,10" 
                 Background ="Gray" Width="950" 
                 HorizontalContentAlignment="Left" 
                 HorizontalAlignment="Center" Grid.RowSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding PublishDate}"/>
                        <TextBlock Text="{Binding Title}"/>
                         
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="start_rss_fider" 
                Content="Запустить" 
                HorizontalAlignment="Center"
                Margin="0,6,0,0" 
                VerticalAlignment="Top" 
                Height="44"  
                Width="72" 
                Click="button_start_rss_fider_Click"
                Grid.Row="2"
                Grid.Column ="1"/>
        <TextBlock x:Name="Head_Title" HorizontalAlignment="Left" Margin="380,0,0,0" TextWrapping="Wrap" Text="RSS Фидер Игоря мощного" VerticalAlignment="Center" TextAlignment="Center" Height="40" Width="320" FontSize="22"/>

    </Grid>




</Window>
